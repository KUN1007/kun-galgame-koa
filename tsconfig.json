{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    // ts 严格模式
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "allowUnreachableCode": true,
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types", "./typings"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./build"
  },
  "include": [
    "./config/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "config/utils.ts"
  ],
  "exclude": ["node_modules", "build", "**/*.test.ts", "test/**/*", "temp"],
  "compileOnSave": true,
  "buildOnSave": true
}
